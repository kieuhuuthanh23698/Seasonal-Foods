<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_gravity="center"
    android:background="#ffff"
    android:orientation="vertical"
    android:weightSum="7">

    <ImageView
        android:id="@+id/gvItem_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"

        android:layout_weight="3"

        android:scaleType="fitCenter"
        android:src="@drawable/sp1" />

    <TextView
        android:id="@+id/gvItem_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"

        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Cherry Đà Lạt"
        android:textAlignment="textStart"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"

        android:background="#ffff"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/gvItem_giaKM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="13.000 đ"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gvItem_gia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="22.000 đ"
            android:textAlignment="textStart"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/gvItem_btnMua"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"

        android:layout_weight="1"

        android:background="@drawable/btn_mua"
        android:padding="10dp"
        android:text="CHỌN MUA"
        android:textColor="@color/colorGreen"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/gvItem_Group_SL"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:background="@drawable/btn_mua"
        android:backgroundTint="@color/colorGreen"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/gvItem_Giam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_mua"
            android:backgroundTint="@color/colorGreen"
            android:gravity="center"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gvItem_sl"
            android:text="0"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/gvItem_Tang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/btn_mua"
            android:backgroundTint="@color/colorGreen"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>